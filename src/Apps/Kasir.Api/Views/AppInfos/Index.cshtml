@model Kasir.Api.ViewModel.AppInfoViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>الكلمة الترحيبية</h1>

<div>
    <hr />
    <dl class="row">
        @for (int i = 0; i < ((List<LanguageDto>)ViewBag.Languages).Count(); i++)
        {
            LanguageDto lang = ViewBag.Languages[i];
            <dt class="col-sm-4">
                <label class="control-label">@lang.Name</label>
            </dt>
            <dd class="col-sm-8">
            </dd>
            <dt class="col-sm-2">
                العنوان
            </dt>
            <dd class="col-sm-10">
                @Model.AppInfoLanguageViewModels.FirstOrDefault(cl=>cl.LanguageId == lang.Id)?.Title
            </dd>
            <dt class="col-sm-2">
                الكلمة الترحيبية
            </dt>
            <dd class="col-sm-10">
                @Model.AppInfoLanguageViewModels.FirstOrDefault(cl=>cl.LanguageId == lang.Id)?.Description
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("تعديل", "Edit") |
</div>
