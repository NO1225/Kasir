@using Kasir.Application.Common.Interfaces

@inject IIdentityService IdentityService;

<ul class="navbar-nav">
@if (IdentityService.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-action="Manage" asp-controller="Auth" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-action="SignOut" asp-controller="Auth">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="SignIn" asp-controller="Auth">Login</a>
    </li>
}
</ul>
