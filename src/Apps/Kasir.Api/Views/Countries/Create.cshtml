@model Kasir.Application.Countries.Commands.Create.CreateCountryCommand

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CreateCountryCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                <input name="File" type="file" class="form-control" />
            </div>
            @for(int i = 0;i<((List<LanguageDto>)ViewBag.Languages).Count();i++)
                {
                LanguageDto lang = ViewBag.Languages[i];
             <div class="form-group">
                <input 
                type="hidden" 
                name="CountryLanguageDtos[@i].LanguageId" 
                value="@lang.Id"/>
            </div>    
             <div class="form-group">
                <label class="control-label">@lang.Name</label>
                <input name="CountryLanguageDtos[@i].Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>                
                }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
