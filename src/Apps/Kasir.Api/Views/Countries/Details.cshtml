@model Kasir.Api.ViewModel.CountryViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>CountryViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <img width="200" height="200" src="@UploadDownloadHelper.ShowCountryImage(Model.ImagePath)" />
        </dd>
        @for (int i = 0; i < ((List<LanguageDto>)ViewBag.Languages).Count(); i++)
        {
            LanguageDto lang = ViewBag.Languages[i];
            <dt class="col-sm-2">
                @lang.Name
            </dt>
            <dd class="col-sm-10">
                @Model.CountryLanguageViewModels.FirstOrDefault(cl=>cl.LanguageId == lang.Id)?.CountryName
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id  }) |
    <a asp-action="Index">Back to List</a>
</div>
