@model IEnumerable<Kasir.Api.ViewModel.WordViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Information)
            </th>
            @foreach (LanguageDto lang in ViewBag.Languages)
            {
                <th>
                    @lang.Name
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img width="50" height="50" src="@UploadDownloadHelper.ShowWordImage(item.ImagePath)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Information)
                </td>
                @foreach (var lang in item.WordLanguageViewModels)
                {
                    <td>
                        @lang.WordName
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    <a href="#" onclick="removeButton(@item.Id)">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
<script>

    function removeButton(id) {
        console.log(id)
        var r = confirm('هل انت متأكد من الحذف');
        if (r == true) {
            window.location.replace("/Words/Delete?id=" + id);
        }
    }

</script>
}

